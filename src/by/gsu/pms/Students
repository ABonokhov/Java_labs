package by.gsu.pms;

import java.io.Serializable;

public class Students implements Serializable {
    private String surname;
    private int age;
    private int debts; // долги по учебе

    public Students(String surname, int age, int debts) {
        super();
        this.surname = surname;
        this.age = age;
        this.debts = debts;
    }

    public Students() {

    }

    public String getSurname() {
        return surname;
    }

    public void setSurname(String surname) {
        this.surname = surname;
    }

    public int getAge() {
        return age;
    }

    public void setAge(int age) {
        this.age = age;
    }

    public int getDebts() {
        return debts;
    }

    public void setDebts(int debts) {
        this.debts = debts;
    }

    public String toString(){
        return valueOf(surname) + "," + valueOf(age) + "," + valueOf(debts) + ".";
    }



    public void show () {
        System.out.println("Surname  = " + valueof(surname);
        System.out.println("Age = " + valueof(age);
        System.out.println("Debts = " + valueof(debts);
    }
}
